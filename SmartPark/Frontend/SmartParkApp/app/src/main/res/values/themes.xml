<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SmartPark" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primaryColorLight</item>
        <item name="colorSecondary">@color/secondaryColorLight</item>
        <item name="materialButtonStyle">@style/Widget.AppCompat.Button</item>
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="android:textColor">@color/accentColorLight</item>

    </style>

    <style name="Widget.AppCompat.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/accentColorLight</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>